<div class="notif-item">
  <div class="notification">
    <%= link_to schedules_path(anchor: "scheduled#{visit.schedule.id}"), class: 'notif-link' do %>
      <% if visit.user&.photo&.attached? %>
        <%= image_tag visit.user.photo, class: "notif-avatar" %>
      <% else %>
        <%= image_tag ("avatar.png"), class: "notif-avatar" %>
      <% end %>
      <div class="notification-content">
        <p><small>Il y a <%= time_ago_in_words visit.created_at %></small></p>
        <p>Vous avez une demande de visite en attente</p>
      </div>
    <% end %>
  </div>
</div>
