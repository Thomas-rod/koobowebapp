<% if multiple %>
  <div class="card-upload-doc <%= record.send(file).count == 3 ? "fulfill" : "empty"%>">
    <% if record.send(file).attached? %>
      <p><%= title %> (<%= record.send(file).count %>/3) </p>
    <% else %>
      <p><%= title %></p>
    <% end %>
    <%= simple_form_for record, url: record_path(record), class:"form_to_upload_js", html: { id: "edit_record_#{record.id}" }, namespace: record.first_name, method: 'patch' do |f| %>
      <% if record.send(file).attached? %>
        <%= f.input file.to_sym, as: :file, input_html: { multiple: true, class: 'hidden d-none' }, label: ("#{image_tag('sync_files.svg')}").html_safe, label_html: { class: "add-file-clickable"}%>
      <% else %>
        <%= f.input file.to_sym, as: :file, input_html: { multiple: true, class: 'hidden d-none' }, label: ("#{image_tag('add_file2.svg')}").html_safe, label_html: { class: "add-file-clickable"}%>
      <% end %>
      <%= f.submit "Ajouter", class: "koobo-button hide-file submit-file-upload" %>
    <% end %>
    <% if record.send(file).attached? %>
      <%= link_to purge_document_record_path(record, :file => file), method: 'delete', data: { confirm: "Tu veux supprimer le document ?" } do %>
        <i class="fas fa-times delete-document"></i>
      <% end %>
      <p class="file-name"><i><%= record.send(file).first.filename %></i></p>
    <% end %>
  </div>
<% else %>
  <div class="card-upload-doc <%= record.send(file).attached? ? "fulfill" : "empty"%>">
    <p><%= title %></p>
    <%= simple_form_for record, url: record_path(record), class:"form_to_upload_js", html: { id: "edit_record_#{record.id}" }, namespace: record.first_name, method: 'patch' do |f| %>
      <% if record.send(file).attached? %>
        <%= f.input file.to_sym, as: :file, input_html: { class: 'hidden d-none' }, label: ("#{image_tag('sync_files.svg')}").html_safe, label_html: { class: "add-file-clickable"}%>
      <% else %>
        <%= f.input file.to_sym, as: :file, input_html: { class: 'hidden d-none' }, label: ("#{image_tag('add_file2.svg')}").html_safe, label_html: { class: "add-file-clickable"}%>
      <% end %>
      <%= f.submit "Ajouter", class: "koobo-button hide-file submit-file-upload" %>
    <% end %>
    <% if record.send(file).attached? %>
      <%= link_to purge_document_record_path(record, :file => file), method: 'delete', data: { confirm: "Tu veux supprimer le document ?" } do %>
        <i class="fas fa-times delete-document"></i>
      <% end %>
      <p class="file-name"><i><%= record.send(file).filename %></i></p>
    <% end %>
  </div>
<% end %>
