<% unless multiple %>
  <% if @record.send(file).attached? %>
    <i class="fas fa-check-circle font-green"></i>
  <% else %>
    <i class="fas fa-times"></i>
  <% end %>
<% else %>
  <% if @record.send(file).attached? && @record.send(file).count == 3 %>
    <i class="fas fa-check-circle font-green"></i>
  <% else %>
    <i class="fas fa-times"></i>
  <% end %>
<% end %>
