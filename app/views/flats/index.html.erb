<div class="container">
  <% @flats.each do |flat| %>
    <h2><%= flat.name %></h2>
    <% flat.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <h4><%= flat.address %></h3>
    <h5><%= flat.monthly_price %></h4>
    <p><%= flat.description %></p>
  <% end %>
</div>
