<div class="dashboard-data-set" data-line="appartements">
  <div class="d-flex">
    <%= render partial: 'shared/dashboard', locals: { flats: @flats, schedules: @schedules, documents: @documents} %>
    <div style=" width:100%;">
      <%= render partial: 'shared/navbar_dashboard', locals: { page_title: 'Appartements', notif_counter: @counter} %>
      <div class="container-disposition">
        <div id="disposition-card-one">
          <div id="disposition-one-left-top">
            <div class="card-trip">
              <%= render "shared/carousel_show" %>
            </div>
          </div>
          <div id="disposition-one-left-bottom">
            <div id="message-board">
              <div id="feed-message-board">
                <span class="placeholder-message-board"><p>Champ où va apparaître les messages </p></span>
              </div>
              <div id="create-message-board">
                <p>Ecrire un message ou répondre</p>
              </div>
            </div>
          </div>
          <div id="disposition-one-right-top">
            <h4>Documents de mon appartement</h4>
            <div id="documents-list">
              <ul>
                <li><%= link_to'#' do %><p class="button-sign-home">Bail</p><% end %></li>
                 <li><%= link_to'#' do %><p class="button-sign-home">Etat des lieux</p><% end %></li>
                 <li><%= link_to'#' do %><p class="button-sign-home">Quittances</p><% end %></li>
                 <li><%= link_to'#' do %><p class="button-sign-home">Autres</p><% end %></li>
              </ul>
            </div>
          </div>
          <div id="disposition-one-right-bottom">
            <%= render "shared/card_locataire" %>
          </div>
        </div>
      </div>
      <!-- HERE -->
    </div>
  </div>
</div>

