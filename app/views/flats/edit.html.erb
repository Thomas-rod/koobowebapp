                            <path d="M4 0L1 3h6L4 0zM1 5l3 3l3-3H1z" fill="currentColor"></path>
                          </svg>
                        </span>
                        <span class="form-part radio-part">
                            <div class="form-check">
                              <input class="form-check-input boolean optional" type="hidden" type="checkbox" value="1" name="flat[balcony]" id="flat_balcony">
                              <label class="form-check-label boolean optional" for="flat_balcony">Balcon</label>
                            </div>
                          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcToZ0zQLAhC3nanPlXxL40ToffY-oj9kpDWMCXr-h3R6Rk7bmIX" id="balcony-img">
                        </span>
                        <span class="form-part radio-part">
                            <div class="form-check">
                              <input class="form-check-input boolean optional" type="hidden" type="checkbox" value="1" name="flat[parking]" id="flat_parking">
                              <label class="form-check-label boolean optional" for="flat_parking">Parking</label>
                            </div>
                          <i class="fas fa-parking"></i>
                        </span>
                        <span class="form-part radio-part">
                            <div class="form-check">
                              <input class="form-check-input boolean optional" type="hidden" type="checkbox" value="1" name="flat[cellar]" id="flat_cellar">
                              <label class="form-check-label boolean optional" for="flat_cellar">Cave</label>
                            </div>
                          <img src="https://image.flaticon.com/icons/svg/1200/1200913.svg" id="cellar-img">
                        </span>
                    </div>



            <span class="form-part"><%= f.input :description, label: false, placeholder: "J'ai encore quelques détails à préciser..." %></span>
            <%= f.input :photos, as: :file, id: "special-photo-btn", input_html: { multiple: true } %>
            <%= f.submit "Suivant", id: "special-form-btn" %>
          <% end %>
          <a href="https://icons8.com/icon/59644/balcon" class="icon-link">Balcon icon by Icons8</a>
