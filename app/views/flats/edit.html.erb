          <div class="special-form" id="special-radio">
                        <span class="form-part radio-part">
                            <div class="form-check">
                              <input class="form-check-input boolean optional" type="hidden" type="checkbox" value="1" name="flat[furnished]" id="flat_furnished">
                              <label class="form-check-label boolean optional" for="flat_furnished">Meublé</label>
                            </div>
                          <i class="fas fa-couch"></i>
                        </span>
                        <span class="form-part radio-part">
                            <div class="form-check">
                              <input class="form-check-input boolean optional" type="hidden" type="checkbox" value="1" name="flat[elevator]" id="flat_elevator">
                              <label class="form-check-label boolean optional" for="flat_elevator">Ascenseur</label>
                            </div>
