
<div class="navbar navbar-expand-sm navbar-light navbar-home navbar-lewagon space-between sticky-top">
  <div class="container-nav-home">
    <div class="d-flex">
      <%= link_to root_path, class: "navbar-brand mt-1" do %>
      <h2 class = "title mt-2"><strong><span style='color: #EE8572'>k</span>oobo</strong></h2>
      <% end %>
    </div>
      <div class="d-flex bd-highlight">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                  <%= link_to "Votre espace personnel", flats_path, class: "nav-link" %>
                </li>
                <li class="nav-item dropdown">

                  <% if current_user.photo.attached? %>
                    <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                  <% else %>
                    <%=  image_tag ("avatar.png"), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                  <% end %>

                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                  </div>
                </li>
              <% else %>
                <li class="nav-item active">
                  <%= link_to "Créer un compte", new_user_registration_path, class: "nav-link" %>
                </li>
                <li class="nav-item dropdown">
                  <%= image_tag ("avatar.png"), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                </li>
              <% end %>
          </ul>
        </div>
      </div>
  </div>
</div>
<div class="banner banner-sign" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1520607162513-77705c0f0d4a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2249&q=80);">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <!-- Insert form here -->
        <div class="form-login">

        <h2>Se connecter</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "Email...." } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "Mot de passe...." } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Se connecter" , class: "btn koobo-button"%>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
</div>
</div>


